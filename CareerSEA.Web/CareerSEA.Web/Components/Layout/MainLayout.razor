@inherits LayoutComponentBase
@using MudBlazor.Utilities
@using MudBlazor

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    // 2. Set Dark Mode to TRUE by default
    private bool _isDarkMode = true;

    // 3. Renamed to match the HTML (@bind-Theme="_theme")
    private MudTheme _theme = new MudTheme()
    {
        // Configuration for Light Mode (from your snippet)
        PaletteLight = new PaletteLight()
        {
            Primary = new MudColor("#10b981"),
            PrimaryContrastText = new MudColor("#ffffff"),
            TextPrimary = new MudColor("#0f172a"),
            TextSecondary = new MudColor("#64748b"),
            TextDisabled = new MudColor("#64748b"),
            Surface = new MudColor("#ffffff"),
            Background = new MudColor("#ffffff"),
            LinesDefault = new MudColor("#e2e8f0"),
            LinesInputs = new MudColor("#e2e8f0"),
            Secondary = new MudColor("#64748b"),
            SecondaryContrastText = new MudColor("#ffffff"),
        },
        // 4. ADDED: Configuration for Dark Mode
        // (I inverted your Light colors to make a nice Dark Slate theme)
        PaletteDark = new PaletteDark()
        {
            Primary = new MudColor("#10b981"), // Keep your Green
            PrimaryContrastText = new MudColor("#ffffff"),

            // Dark backgrounds (Slate 900 & 800)
            Background = new MudColor("#0f172a"),
            Surface = new MudColor("#1e293b"),

            // Light Text
            TextPrimary = new MudColor("#f1f5f9"),
            TextSecondary = new MudColor("#94a3b8"),
            TextDisabled = new MudColor("#64748b"),

            LinesDefault = new MudColor("#334155"),
            LinesInputs = new MudColor("#334155"),
            Secondary = new MudColor("#64748b"),
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "sans-serif" }
            }
        },
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "0.75rem"
        }
    };
}