@page "/experience"
@rendermode InteractiveServer
@using CareerSEA.Contracts
@using CareerSEA.Contracts.Requests
@using CareerSEA.Contracts.Responses
@using MudExtensions
@using Newtonsoft.Json
@using MudBlazor
@using System.Net.Http.Json
@inject ApiClient apiClient
@inject ISnackbar Snackbar
@inject HttpClient Http


<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="d-flex justify-center" Style="min-height: 90vh; padding: 0.25rem 0.5rem;">

    <MudCard Elevation="20" Class="w-100" Style="max-width: 56rem;">

        <MudCardHeader Class="border-b-1 border-solid border-lines-default pa-6">
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center" Class="font-weight-bold">Experience Dashboard</MudText>
                <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mud-text-secondary">
                    Manage, add, and review your saved job experiences.
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>

        <MudCardContent Class="pa-8">

            <MudText Typo="Typo.h6" GutterBottom="true">Saved Experiences</MudText>

            @if (_isLoading)
            {
                <div class="d-flex justify-center my-4">
                    <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
                </div>
            }
            else if (experienceModels == null || !experienceModels.Any())
            {
                <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="my-4">
                    No experiences found. Add your first job role below!
                </MudAlert>
            }
            else
            {
                <MudStack Spacing="3">
                    @foreach (var exp in experienceModels)
                    {
                        <MudPaper Class="job-entry-paper pa-4" Elevation="2">
                            <MudText Typo="Typo.h6" Color="Color.Primary" GutterBottom="true">@exp.Title</MudText>
                            <MudText Typo="Typo.body2" Class="mb-3" Style="white-space: pre-line;">@exp.Description</MudText>
                            <MudDivider Class="mb-2" />
                            <MudText Typo="Typo.caption">
                                <strong>Skills:</strong> @exp.Skills
                            </MudText>
                        </MudPaper>
                    }
                </MudStack>
            }

            <MudDivider Class="my-8" />

            <MudText Typo="Typo.h6" GutterBottom="true">Add New Experience</MudText>

            <EditForm Model="@model" OnValidSubmit="HandleValidSubmit" FormName="ExperienceForm">
                <DataAnnotationsValidator />

                <MudGrid Spacing="3">

                    <MudItem xs="12">
                        <MudSelectExtended T="string"
                                           @rendermode="InteractiveAuto"
                                           @bind-Value="model.Title"
                                           Label="Job Title"
                                           Variant="Variant.Outlined"
                                           Dense="true"
                                           ItemCollection="_jobTitles"
                                           SearchBox="true"
                                           SearchBoxAutoFocus="true"
                                           SearchBoxClearable="true"
                                           SearchFunc="@(new Func<string, string, bool>(SearchJobTitleFunc))"
                                           HelperText="Select a job title from the list"
                                           For="@(() => model.Title)"
                                           Required="true" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Job Description"
                                      Placeholder="Paste the full job description here..."
                                      Variant="Variant.Outlined"
                                      Lines="6"
                                      @bind-Value="model.Description"
                                      For="@(() => model.Description)"
                                      Required="true" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Skills"
                                      Placeholder="e.g., Kubernetes, Terraform, Ansible"
                                      Variant="Variant.Outlined"
                                      @bind-Value="model.Skills"
                                      For="@(() => model.Skills)"
                                      Required="true" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudButton ButtonType="ButtonType.Submit"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   FullWidth="true"
                                   Disabled="@_isSaving"
                                   Size="Size.Large">
                            @if (_isSaving)
                            {
                                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                <MudText Class="ms-2">Saving...</MudText>
                            }
                            else
                            {
                                <MudText>Save Experience</MudText>
                            }
                        </MudButton>
                    </MudItem>

                    <MudItem xs="12">
                        <MudButton ButtonType="ButtonType.Button"
                                   Variant="Variant.Filled"
                                   Color="Color.Secondary"
                                   FullWidth="true"
                                   Size="Size.Large">
                            Generate Future Career Prospects
                        </MudButton>
                    </MudItem>

                </MudGrid>
            </EditForm>

        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    public List<ExperienceRequest> experienceModels { get; set; } = new();

    [SupplyParameterFromForm(FormName = "ExperienceForm")]
    public ExperienceRequest model { get; set; } = new();

    private bool _isLoading = true;
    private bool _isSaving = false;

    private string[] _jobTitles =
    {
        "Senior Frontend Developer", "Full-Stack Engineer", "DevOps Engineer",
        "Backend Developer", "Cloud Architect", "Data Scientist",
        "UX/UI Designer", "Product Manager", "Scrum Master",
        "Software Engineer", "QA Tester", "Database Administrator"
    };

    private bool SearchJobTitleFunc(string value, string search)
    {
        if (string.IsNullOrWhiteSpace(search))
            return true;
        return value.Contains(search, StringComparison.InvariantCultureIgnoreCase);
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadExperiencesAsync();
    }

    private async Task HandleValidSubmit()
    {
        if (!_jobTitles.Contains(model.Title))
        {
            Snackbar.Add("Please select a job title from the list.", Severity.Warning);
            return;
        }

        _isSaving = true;
        try
        {
            // FIX 1: Updated Endpoint from "/api/Experience/..." to "/api/ExperiencePrediction/..."
            var response = await Http.PostAsJsonAsync("/api/ExperiencePrediction/SaveForm", model);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<BaseResponse>();

                if (result != null && result.Status)
                {
                    model = new(); // Reset form
                    await LoadExperiencesAsync(); // Reload list
                    Snackbar.Add("Experience Saved!", Severity.Success);
                }
                else
                {
                    Snackbar.Add("Saved, but server returned an error: " + (result?.Message ?? "Unknown"), Severity.Warning);
                }
            }
            else
            {
                Snackbar.Add($"Error saving experience. Status: {response.StatusCode}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Connection error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task LoadExperiencesAsync()
    {
        _isLoading = true;
        try
        {
            // FIX 2: Updated Endpoint from "/api/Experience/..." to "/api/ExperiencePrediction/..."
            var result = await Http.GetFromJsonAsync<BaseResponse>("/api/ExperiencePrediction/GetForms");

            if (result != null && result.Status)
            {
                if (result.Data != null)
                {
                    // FIX 3: Robust Deserialization
                    // HttpClient uses System.Text.Json, so result.Data is a JsonElement.
                    // We convert it to a string so Newtonsoft can parse it into your List object.
                    var jsonString = result.Data.ToString();
                    experienceModels = JsonConvert.DeserializeObject<List<ExperienceRequest>>(jsonString) ?? new List<ExperienceRequest>();
                }
                else
                {
                    experienceModels = new List<ExperienceRequest>();
                }
            }
            else
            {
                experienceModels = new List<ExperienceRequest>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
            Snackbar.Add("Failed to load previous experiences.", Severity.Error);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }
}
